    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'autoheal-rs'",
            "cargo": {
                "args": ["build", "--bin=autoheal-rs", "--package=autoheal-rs"],
                "filter": {
                    "name": "autoheal-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "autoheal_rs=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'autoheal-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=autoheal-rs",
                    "--package=autoheal-rs"
                ],
                "filter": {
                    "name": "autoheal-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "autoheal_rs=trace"
            }
        }
    ]
}
